<?xml version="1.0" encoding="UTF-8"?>

<!--
    Author: Vinod Parlapalli
    Created on 2019/10/13
    All spring framework INFO or above level logs are forwarded to console.
    All banking api INFO or above level logs are forwarded to ./logs/banking_api_logger.log file.
-->

<configuration>

    <property name="LOGS" value="./logs" />

    <appender name="Console"
              class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %black(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable
            </Pattern>
        </layout>
    </appender>

    <appender name="RollingFile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS}/demo_logger.log</file>
        <encoder
                class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
        </encoder>

        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- rollover daily and when the file reaches 10 MegaBytes -->
            <fileNamePattern>${LOGS}/archive/demo_logger-%d{yyyy-MM-dd}.%i.log
            </fileNamePattern>
            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10MB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- LOG everything at DEBUG level to console-->
    <root level="INFO">
        <!-- <appender-ref ref="RollingFile" /> -->
        <appender-ref ref="Console" />
    </root>

    <!-- LOG "in.rgukt.r081247.bankingapi*" at INFO level to file -->
    <logger name="com.example.springbootjpa" level="INFO">
        <appender-ref ref="RollingFile" />
        <!-- <appender-ref ref="Console"/> -->
    </logger>

</configuration>